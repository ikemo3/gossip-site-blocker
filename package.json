{
  "name": "gossip-site-blocker",
  "version": "1.16.2",
  "license": "MIT",
  "author": "Hideki Ikemoto",
  "type": "module",
  "scripts": {
    "archive": "tsx ./scripts/archive.ts",
    "build": "run-s build:*",
    "build:vite": "vite build",
    "build:manifest": "tsx ./scripts/make_manifest.ts",
    "dev": "vite",
    "fix": "ESLINT_USE_FLAT_CONFIG=true eslint --fix .",
    "format": "run-s format:*",
    "format:prettier": "prettier --write .",
    "format:sort-package-json": "sort-package-json",
    "lint": "run-s lint:*",
    "lint:dep": "depcruise .",
    "lint:eslint": "ESLINT_USE_FLAT_CONFIG=true eslint .",
    "lint:prettier": "prettier --check .",
    "lint:sort-package-json": "sort-package-json --check",
    "lint:tsc": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "tabbyjs": "^12.0.3",
    "vanjs-core": "^1.5.5"
  },
  "devDependencies": {
    "@types/chrome": "0.1.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.16.3",
    "date-fns": "4.1.0",
    "dependency-cruiser": "^16.10.4",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-formatter-junit": "^8.40.0",
    "eslint-plugin-n": "^17.21.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "sort-package-json": "^3.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.0.4",
    "vitest": "^3.2.4",
    "zip-a-folder": "3.1.9"
  },
  "packageManager": "pnpm@10.13.1"
}
