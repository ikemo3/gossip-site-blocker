{
  "name": "gossip-site-blocker",
  "version": "1.17.0",
  "license": "MIT",
  "author": "Hideki Ikemoto",
  "type": "module",
  "scripts": {
    "archive": "tsx ./scripts/archive.ts",
    "build": "run-s build:*",
    "build:vite": "vite build",
    "build:manifest": "tsx ./scripts/make_manifest.ts",
    "dev": "vite",
    "fix": "ESLINT_USE_FLAT_CONFIG=true eslint --fix .",
    "format": "run-s format:*",
    "format:prettier": "prettier --write .",
    "format:sort-package-json": "sort-package-json",
    "lint": "run-s lint:*",
    "lint:dep": "depcruise .",
    "lint:eslint": "ESLINT_USE_FLAT_CONFIG=true eslint .",
    "lint:prettier": "prettier --check .",
    "lint:sort-package-json": "sort-package-json --check",
    "lint:tsc": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "tabbyjs": "^12.0.3",
    "vanjs-core": "^1.6.0"
  },
  "devDependencies": {
    "@types/chrome": "0.1.36",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.11",
    "date-fns": "4.1.0",
    "dependency-cruiser": "^17.3.7",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-junit": "^9.0.1",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.8.1",
    "sort-package-json": "^3.6.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "zip-a-folder": "4.0.4"
  },
  "packageManager": "pnpm@10.28.2"
}
